<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>
    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="500" prefHeight="300"/>
    <TextField fx:id="textField" onKeyPressed="#handleEnterPressed" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="500"/>
    <Button text="Send" onAction="#onClickBtnSend" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
</GridPane>