<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>

<?import javafx.scene.control.ListView?>
<VBox fx:controller="client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">

    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <HBox fx:id="authPanel" visible="true" managed="true">
        <TextField fx:id="loginField" promptText="login" HBox.hgrow="ALWAYS"/>
        <PasswordField fx:id="passwordField" promptText="password" HBox.hgrow="ALWAYS" onAction="#tryToAction"/>
        <Button text="auth" onAction="#tryToAction" minWidth="60"/>
        <Button text="reg" onAction="#registration" minWidth="60"/>
    </HBox>

    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="textArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true"/>
        <ListView fx:id="clientsList" visible="true" managed="false" minWidth="70" onMouseClicked="#clickClientList"/>
    </HBox>
    <HBox fx:id="msgPanel" visible="true" managed="false">
        <TextField fx:id="textField" promptText="введите сообщение" HBox.hgrow="ALWAYS" onAction="#sendMsg"/>
        <Button text="Send" onAction="#sendMsg"/>
    </HBox>
</VBox>